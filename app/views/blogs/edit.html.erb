<main class="clearfix">

  <section class="blog">
    <h2 class="blog-headline">Update Blog</h2>
    <%= form_for(@blog) do |f| %>
      <div class="blog-item">
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Body</h4>
        <%= f.text_area :body %>
        <h4>Category</h4>
        <%= f.text_field :category %>
        <h4>Picture</h4>
        <%= f.attachment_field :image %>
        <%= f.submit 'Update' %>
      </div>
    <% end %>
  </section>

  <div class="sidebar">
      <section class="popular">
        <h2 class="sidebar-headline">Popular</h2>
